<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PannelloPrincipale">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orario Giorno"
        android:id="@+id/button"
        android:layout_below="@+id/button3"
        android:onClick="OnOrarioGiorno"
        android:layout_alignStart="@+id/button3"
        android:textStyle="italic"
        android:layout_alignEnd="@+id/button3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orario Completo"
        android:id="@+id/button2"
        android:onClick="OnOrarioCompleto"
        android:textStyle="italic"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aggiorna Orario"
        android:id="@+id/button3"
        android:textStyle="italic"

        android:onClick="OnAggiornaOrario"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variazione Orario"
        android:id="@+id/button4"
        android:onClick="popUp"
        android:textStyle="italic"

        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button3" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:visibility="visible"
        android:clickable="true"
        android:textStyle="italic"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout >
